{
    "servers": {
        "Terraform MCP Server": {
            "command": "docker",
            "args": [
                "run",
                "-i",
                "--rm",
                "hashicorp/terraform-mcp-server"
            ],
            "env": {},
            "type": "stdio"
        },
        "Azure MCP Server": {
            "command": "npx",
            "args": [
                "-y",
                "@azure/mcp@0.0.21",
                "server",
                "start"
            ]
        },
        "context7": {
          "type": "stdio",
          "command": "npx",
          "args": ["-y", "@upstash/context7-mcp", "--api-key", "${input:context7-api-key}"]
        }
    },
    "inputs": [
        {
          "type": "promptString",
          "id": "context7-api-key",
          "description": "Context7 API Key",
          "password": true
        }
    ]
}