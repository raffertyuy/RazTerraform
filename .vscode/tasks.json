{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Terraform: Init All Examples",
            "type": "shell",
            "command": "pwsh",
            "args": [
                "-Command",
                "Get-ChildItem -Path examples -Directory | ForEach-Object { Write-Host \"Initializing $_...\" -ForegroundColor Green; Set-Location $_.FullName; terraform init; Set-Location ../.. }"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Initialize Terraform for all example templates"
        },
        {
            "label": "101-web-app-windows-dotnet: Init",
            "type": "shell",
            "command": "terraform",
